<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <!-- Thêm quyền truy cập Internet -->
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.MoPhoneApp11"
        tools:targetApi="31">

        <activity
            android:name=".MainActivity"
            android:exported="true"
            android:label="@string/app_name"
            android:theme="@style/Theme.MoPhoneApp11.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- Khai báo AddProductActivity -->
        <activity
            android:name=".activities.AddProductActivity"
            android:exported="true">
        </activity>
        <activity
            android:name=".activities.EditProductActivity"
            android:exported="true">
        </activity>
        <activity
            android:name=".activities.DeleteProductActivity"
            android:exported="true">
        </activity>
        <activity android:name=".activities.RegisterActivity" />
        <activity android:name=".activities.LoginActivity" />
    </application>

</manifest>
